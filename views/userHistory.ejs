<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User History</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">

  <div class="navbar bg-base-100">
    <div class="flex-1">
      <a class="btn btn-ghost normal-case text-xl" href="/">UN Member States</a>
    </div>

    <div class="dropdown">
      <label tabindex="0" class="btn btn-ghost sm:hidden">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
        </svg>
      </label>
      <ul tabindex="0" class="menu menu-sm dropdown-content right-0 mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
        <li><a class="" href="/un/countries">All Countries</a></li>
        <li><a class="" href="/about">About</a></li>
        <li>
          <details>
            <summary>Account: <%= session.user.userName %></summary>
            <ul class="p-2 right-0">
              <li><a class="" href="/un/addCountry">Add Country</a></li>
              <li><a class="active" href="/userHistory">User History</a></li>
              <li><a href="/logout">Log Out</a></li>
            </ul>
          </details>
        </li>
      </ul>
    </div>

    <div class="navbar-center hidden sm:flex">
      <ul class="menu menu-horizontal px-1">
        <li><a class= "" href="/un/countries">All Countries</a></li>
        <li><a class= "" href="/about">About</a></li>
        <li>
          <details>
            <summary>Account: <%= session.user.userName %></summary>
            <ul class="p-2 right-0">
              <li><a class="" href="/un/addCountry">Add Country</a></li>
              <li><a class="active" href="/userHistory">User History</a></li>
              <li><a href="/logout">Log Out</a></li>
            </ul>
          </details>
        </li>
      </ul>
    </div>
  </div>

  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold"><%= session.user.userName %></h1>
          <p class="py-6">User History: <%= session.user.email %></p>
        </div>
      </div>
    </div>
    <br />

    <table class="table table-zebra">
      <thead>
        <tr>
          <th>Login Date/Time</th>
          <th>Client Information</th>
        </tr>
      </thead>
      <tbody>
        <% session.user.loginHistory.forEach(history => { %>
        <tr>
          <td><%= history.dateTime %></td>
          <td><%= history.userAgent %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>

</html>
